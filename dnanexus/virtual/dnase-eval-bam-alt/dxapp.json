{
  "name": "dnase-eval-bam-alt",
  "title": "Evaluate bam (virtual-1.0.2)",
  "summary": "Evaluates sample of bam for the ENCODE DNase-seq pipeline",
  "dxapi": "1.0.0",
  "version": "1.0.2",
  "authorizedUsers": [],
  "inputSpec": [
    {
      "name": "bam_filtered",
      "label": "Filtered bam",
      "class": "file",
      "optional": false,
      "patterns": [ "*_filtered.bam", "*_filtered_sized.bam" ]
    },
    {
      "name": "pe_or_se",
      "label": "Paired or single-ended alignments",
      "class": "string",
      "choices": [ "pe", "se" ],
      "optional": false
    },
    {
      "name": "sample_size",
      "label": "Number of bam reads to sample",
      "class": "int",
      "optional": true,
      "default": 15000000
    },
    {
      "name": "nthreads",
      "label": "Number of threads to use",
      "class": "int",
      "optional": true,
      "default": 2
    }
  ],
  "outputSpec": [
    {
      "name": "bam_sample",
      "label": "Sample of bam filtered and without chrM",
      "class": "file",
      "patterns": ["*_sample.bam"]
    },
    {
      "name": "bam_sample_qc",
      "label": "Sample bam qc: edwBamStats, spp and PBC output",
      "class": "file",
      "patterns": ["*_sample_qc.txt"]
    },
    {
      "name": "sampled_reads",
      "label": "Count of reads in the sample bam",
      "optional": true,
      "class": "string"
    },
    {
      "name": "metadata",
      "label": "JSON formatted string of metadata",
      "class": "string"
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/dnase-eval-bam.sh",
    "systemRequirements": { "main": { "instanceType": "mem3_hdd2_x2" } },
    "execDepends": [
        { "name": "gawk" }
    ]
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "categories": [
    "ENCODE"
  ]
}
